<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/habitaciones_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habitaciones seleccionadas:"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/dias_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de días:"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />
    <Spinner
        android:id="@+id/dias_reserva_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/precio_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio total: $0.0"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/reservar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:layout_marginTop="16dp" />

</LinearLayout>